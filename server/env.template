# Server type: ARCLIGHT or MOHIST for Spigot+NeoForge hybrid
# - ARCLIGHT: Stable, active development, supports NeoForge
# - MOHIST: Alternative hybrid server, also supports NeoForge
# Note: Verify which TYPE values are supported by itzg/minecraft-server
TYPE=ARCLIGHT

# Arclight type: NEOFORGE for NeoForge support (only if TYPE=ARCLIGHT)
# Options: NEOFORGE, FORGE, FABRIC
ARCLIGHT_TYPE=NEOFORGE

# Minecraft version (must match modpack version for compatibility)
# Arclight supports 1.20.1 and 1.21.1 with NeoForge
VERSION=1.21.1

# NeoForge version (leave empty for latest)
NEOFORGE_VERSION=

# Memory allocation for server
MEMORY=2G

# Server port
SERVER_PORT=25565

# Data directory for world data, logs, player data
DATA_DIR=./data

# RCON (Remote Console) configuration
# Enable RCON for remote console access
ENABLE_RCON=true

# RCON password (use a strong, unique password)
RCON_PASSWORD=

# RCON port (default: 25575)
RCON_PORT=25575

# Plugins auto-download (Spiget resource IDs, comma-separated)
# See plugins.txt for plugin list
# LuckPerms resource ID: 28140
# Leave empty to disable auto-download
SPIGET_PLUGINS=28140


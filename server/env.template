# Core server settings
VERSION=1.21.1
NEOFORGE_VERSION=
MEMORY=2G
SERVER_PORT=25565
DATA_DIR=./data

# Timezone (set to your server's timezone, e.g., America/New_York, Europe/London)
TZ=

# JVM optimization flags (recommended: true for better performance)
USE_AIKAR_FLAGS=true

# Optional: Custom JVM options (uncomment and configure if needed)
# JVM_OPTS=
# JVM_XX_OPTS=

# RCON settings
ENABLE_RCON=true
RCON_PASSWORD=
RCON_PORT=25575

# Mods and plugins (CF_MODLIST is a filename in server/extras; compose uses "@/extras/$CF_MODLIST")
ARCLIGHT_RELEASE=
CF_MODLIST=
REMOVE_OLD_MODS=false
PLUGINS_FILE=
SPIGET_PLUGINS=
CF_API_KEY=
